// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id       String   @id @default(uuid())
  name     String
  email    String   @unique
  password String
  reviews  Review[]
}

model Product {
  id          String   @id
  name        String
  brand       String
  category    String
  images      String
  discount    Float?
  price       Float
  rating      Float?
  ratingCount Int      @default(0)
  colors      Color[]
  sizes       Size[]
  tags        Tag[]
  reviews     Review[]
}

model Color {
  id       Int       @id @default(autoincrement())
  color    String    @unique
  products Product[]
}

model Size {
  id       Int       @id @default(autoincrement())
  size     String    @unique
  products Product[]
}

model Tag {
  id       Int       @id @default(autoincrement())
  tag      String    @unique
  products Product[]
}

model Review {
  id         String  @id @default(cuid())
  rating     Float
  review     String
  reviewer   User    @relation(fields: [reviewerId], references: [id])
  reviewerId String
  product    Product @relation(fields: [productId], references: [id])
  productId  String
}
